# ===========================================
# OpenBricks Configuration
# ===========================================

# Application
OPENBRICKS_PORT=8080
NODE_ENV=production

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_USER=openbricks
POSTGRES_PASSWORD=openbricks
POSTGRES_DB=openbricks
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===========================================
# Object Storage (MinIO)
# ===========================================
MINIO_ROOT_USER=openbricks
MINIO_ROOT_PASSWORD=openbricks123
MINIO_ENDPOINT=minio:9000

# ===========================================
# Authentication
# ===========================================
# IMPORTANT: Generate a secure secret for production!
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_EXPIRY=24h

# ===========================================
# Spark Configuration
# ===========================================
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_MASTER_URL=spark://spark-master:7077

# ===========================================
# Optional: Cloud Storage (instead of MinIO)
# ===========================================
# AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=openbricks-data

# Google Cloud Storage
# GCS_PROJECT_ID=
# GCS_BUCKET=openbricks-data

# Azure Blob Storage
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=
# AZURE_CONTAINER=openbricks-data

# ===========================================
# Optional: SSO Configuration
# ===========================================
# OAUTH_PROVIDER=
# OAUTH_CLIENT_ID=
# OAUTH_CLIENT_SECRET=
# OAUTH_REDIRECT_URI=

# ===========================================
# Optional: Email Configuration
# ===========================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@openbricks.local
